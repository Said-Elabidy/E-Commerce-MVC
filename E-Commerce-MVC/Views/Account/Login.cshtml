<div class="login-container">
    <div class="login-card">
        <h2>Welcome Back</h2>
        <p class="subtitle">Please enter your credentials to login</p>

        <!-- Validation Summary -->
        <div asp-validation-summary="All" class="text-danger validation-summary"></div>

        <form asp-action="SaveLogin" asp-controller="Account" method="post">
            <!-- Username Field -->
            <div class="input-group">
                <label asp-for="UserName" class="input-label"></label>
                <input asp-for="UserName" class="form-control" placeholder="Username" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <!-- Password Field -->
            <div class="input-group">
                <label asp-for="Password" class="input-label"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Remember Me Checkbox -->
            <div class="input-group remember-me">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" />
                    @Html.DisplayNameFor(m => m.RememberMe)
                </label>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Login</button>

            <div class="login-footer">
                <a href="#" class="forgot-password">Forgot password?</a>
                <p>Don't have an account? <a asp-action="Register" asp-controller="Account" class="signup-link">Sign up</a></p>
            </div>
        </form>
    </div>

    <style>
        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 60vh;
            background-color: #f8f9fa;
            padding: 2rem;
        }

        .login-card {
            max-width: 420px;
            width: 100%;
            padding: 2.5rem;
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .login-card:hover {
                box-shadow: 0 10px 35px rgba(0, 0, 0, 0.12);
                transform: translateY(-2px);
            }

            .login-card h2 {
                text-align: center;
                margin-bottom: 0.5rem;
                color: #2c3e50;
                font-size: 2rem;
                font-weight: 600;
            }

        .subtitle {
            text-align: center;
            margin-bottom: 2rem;
            color: #7f8c8d;
            font-size: 0.95rem;
        }

        .validation-summary {
            margin-bottom: 1.5rem;
            padding: 0.75rem;
            border-radius: 6px;
        }

        .input-group {
            margin-bottom: 1.75rem;
        }

            .input-group .input-label {
                display: block;
                margin-bottom: 0.6rem;
                margin-right: 15px; /* Added margin-right */
                color: #34495e;
                font-weight: 500;
                font-size: 0.95rem;
            }

            .input-group input {
                width: 100%;
                padding: 0.85rem 1rem;
                border: 1px solid #e0e0e0;
                border-radius: 8px;
                font-size: 1rem;
                color: #2c3e50;
                transition: all 0.3s ease;
            }

                .input-group input:focus {
                    border-color: #3498db;
                    box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.1);
                    outline: none;
                }

            .input-group .text-danger {
                color: #e74c3c;
                font-size: 0.85rem;
                margin-top: 0.4rem;
                display: block;
            }

        .remember-me {
            margin: 1.5rem 0;
            display: flex;
            align-items: center;
        }

            .remember-me label {
                display: flex;
                align-items: center;
                gap: 0.6rem;
                margin-bottom: 0;
                color: #7f8c8d;
                font-weight: 400;
                cursor: pointer;
            }

            .remember-me input {
                width: auto;
                margin: 0;
            }

        .btn-primary {
            width: 100%;
            padding: 0.9rem;
            background-color: #3498db;
            color: #fff;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 0.5rem;
        }

            .btn-primary:hover {
                background-color: #2980b9;
                transform: translateY(-1px);
                box-shadow: 0 4px 12px rgba(41, 128, 185, 0.2);
            }

        .login-footer {
            margin-top: 1.5rem;
            text-align: center;
            font-size: 0.9rem;
            color: #7f8c8d;
        }

        .forgot-password {
            display: block;
            margin-bottom: 1rem;
            color: #3498db;
            text-decoration: none;
            transition: color 0.2s ease;
        }

            .forgot-password:hover {
                color: #2980b9;
                text-decoration: underline;
            }

        .signup-link {
            color: #3498db;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s ease;
        }

            .signup-link:hover {
                color: #2980b9;
                text-decoration: underline;
            }
    </style>
</div>

