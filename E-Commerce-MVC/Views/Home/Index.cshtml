     <section id="product">
    @foreach (var category in Model)
    {
            <div class="container">
                <div class="product-top-part d-flex justify-content-between">
                    <h2 class="product-name">@category.CategoryName</h2>
                <a class="see-more" asp-controller="Product" asp-action="GetProductByCategoryName" asp-route-CategoryName="@category.CategoryName">See All</a>
                @* <a class="see-more" href="/Product/GetProductByCategoryName/@category.CategoryName">See All</a> *@
                </div>
    
                <div class="product-item">
                <div class="card-deck">
                @foreach (var product in category.Products.Take(3))
                {
                            <div class="card col-md-4 d-flex justify-content-md-center align-items-center">
                                <img src="/Images/Product/@product.ImagePath" class="card-img-top img-fluid" alt="@product.Name">
                                <div class="card-body">
                                    <h4 class="card-title">@product.Name</h4>
                                    <p class="card-text">@product.Description</p>
                                    <h5 class="product-price">@product.Price.ToString("C")</h5>
                                    <div class="d-flex justify-content-center">
                                    <a asp-action="AddToCart" asp-controller="Cart" asp-route-productId="@product.Id" class="product-buy-btn" style="text-decoration:none">Add to cart >></a>
                                </div>
                                </div>
                            </div>
                }
                </div>
            </div>
        </div>
}
    </section>
    


